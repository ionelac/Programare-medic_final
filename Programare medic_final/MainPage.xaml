<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Programare_medic_final.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="programari.png"
                SemanticProperties.Description="programari"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Programare online"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Alege varianta rapidă și fă-ți o programare online, completând datele necesare."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Intro"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
